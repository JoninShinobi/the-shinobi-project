{
  "mcpServers": {
    "directus": {
      "type": "http",
      "url": "http://localhost:8055/mcp",
      "headers": {
        "Authorization": "Bearer YOUR_DIRECTUS_TOKEN_HERE"
      }
    },
    "cloudflare-workers": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://bindings.mcp.cloudflare.com/mcp"]
    },
    "cloudflare-audit": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://audit-logs.mcp.cloudflare.com/mcp"]
    },
    "gcloud": {
      "command": "npx",
      "args": ["-y", "@google-cloud/gcloud-mcp"]
    },
    "google-workspace": {
      "command": "uvx",
      "args": ["workspace-mcp"],
      "env": {
        "GOOGLE_OAUTH_CLIENT_ID": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
        "GOOGLE_OAUTH_CLIENT_SECRET": "YOUR_GOOGLE_CLIENT_SECRET"
      }
    }
  }
}
